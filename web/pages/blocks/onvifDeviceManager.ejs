<!--ONVIF Device Manager-->
<div class="modal medium fade dark" id="onvifDeviceManager" role="dialog" aria-labelledby="onvifDeviceManagerLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <form class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="onvifDeviceManagerLabel"><i class="fa fa-code"></i> &nbsp; <%-lang['API Keys']%> <small><%-lang['Group Key']%>  : <%- $user.ke %></small></h4>
      </div>
      <div class="modal-body">
          <div class="text-center msg"></div>
        <div class="col-md-6">
            <% ([
                {
                    label: "",
                    name: "",
                }
            ]).forEach((field) => { %>
                <div class="form-group">
                    <label>
                        <div><span><%- field.label %></span></div>
                        <div>
                            <% if(field.options){ %>
                                <select class="form-control" name="<%- field.name %>">
                                    <% field.options.forEach((option) => { %>
                                        <option value="<%- option.value %>"><%- option.label %></option>
                                    <% }) %>
                                </select>
                            <% }else{ %>
                                <input class="form-control" name="<%- field.name %>" placeholder="<%- field.placeholder || '' %>">
                            } %>
                        </div>
                    </label>
                </div>
            <% }) %>
        </div>
        <div class="col-md-6">
            <pre>
                <code id="onvifDeviceManagerInfo"></code>
            </pre>
        </div>
      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal"><%-lang['Close']%></button>
          <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i> &nbsp; <%-lang['Save']%></button>
      </div>
    </form>
  </div>
</div>
<script src="<%-window.libURL%>libs/js/dash2.onvifDeviceManager.js"></script>
